<link href='http://fonts.googleapis.com/css?family=Bangers' rel='stylesheet' type='text/css'>

<h1 class="table-name">Parents</h1>


<table class="tables">
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Student</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @parents.each do |parent| %>
      <tr>
        <td><%= parent.first_name %></td>
        <td><%= parent.last_name %></td>
        <td><%= "#{parent.student.first_name} #{parent.student.last_name}" if parent.student %></td>
        <td><%= button_to 'Show', parent, :method => :get %></td>
        <td><%= button_to 'Edit', edit_parent_path(parent), :method => :get %></td>
        <td><%= button_to 'Destroy', parent, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="add-new"><%= link_to 'New Parent', new_parent_path, :class => "add-user-button" %></div>
