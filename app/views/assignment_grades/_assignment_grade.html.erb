<tr>
  <td><%= assignment_grade.grade %></td>
  <td><%= assignment_grade.assignment_name %></td>
  <td><%= assignment_grade.assignment_date %></td>
  <td><%= "#{assignment_grade.student.first_name} #{assignment_grade.student.last_name}" if assignment_grade.student %></td>
  <td><%= button_to 'Show PDF', assignment_grade.uploaded_file.url, method: :get %></td>
  <td><%= button_to 'Edit', edit_assignment_grade_path(assignment_grade), method: :get, remote: true if session[:person_type] == "Teacher" %></td>
  <td><%= button_to 'Destroy', assignment_grade, method: :delete, data: { confirm: 'Are you sure?' }, remote: true if session[:person_type] == "Teacher" %></td>
</tr>
