<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this parent from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field">
    <%= f.label :email %><br>
    <%= f.email_field :email %>
  </div>
  <div class="field">
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :github_user_name %><br>
    <%= f.text_field :github_user_name %>
  </div>
  <% if session[:person_type] == "Teacher" %>
    <div class="field">
      <%= f.label :associated_person %><br>
      <%= f.grouped_collection_select :global_owner, [Teacher, Student, Parent], :all, :model_name, :to_global_id, :first_name, :prompt => "Select Person..." %>
    </div>
  <% end %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
